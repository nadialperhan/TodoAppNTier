                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary">Filtrele</button>
                    </div>
                </div>

            </div>
        }
    </div>


    <div class="container" my-2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @*<a href="@Url.Action(" Index", new
                           {
                                page=filter.Page,
                           Definition=filter.Definition,
                           IsCompleted=filter.IsCompleted
                           })">
                            Link Text
                        </a>
                        <a href="@Url.GetUrlWithFilters("Deneme", "Home", filter)" style="text-decoration:none;">Extension</a>*@
                        <a href="@Url.GetUrlWithFiltersGeneric("Deneme", "Home", filter,filter.Page,"Definition")" style="text-decoration:none;">Extension</a>
                        <a asp-action="Deneme" asp-controller="Home" asp-route-filter="abc" asp-route-page="page">deneme</a>

                    </th>
                    <th>Definiation</th>
                    <th>isCompleted</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.WorkListDto)
                {
                    <tr>
                        <td>@item.Definition</td>
                        <td>@(item.IsCompleted?"Tamamlandı":"Tamamlanmadı")</td>
                        <td>
                            <a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a>
                            <a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn bg-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @*@Html.PagedListPager((IPagedList)Model.WorkListDto, page => Url.Action("Deneme", new
            {
                page,
                Definition = filter.Definition,
                IsCompleted = filter.IsCompleted
